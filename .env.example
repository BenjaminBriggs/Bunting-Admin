# Database
DATABASE_URL="postgresql://user:password@localhost:5432/bunting_admin"

# Storage (S3-compatible)
S3_ENDPOINT="https://s3.amazonaws.com"
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"
S3_BUCKET="bunting-configs"
S3_REGION="us-east-1"

# CDN
CDN_BASE_URL="https://cdn.example.com"

# Signing
PRIVATE_KEY_PATH="/path/to/private.pem"
# Alternative: Use KMS
# PRIVATE_KEY_KMS_KEY_ID="arn:aws:kms:region:account:key/key-id"

# App Configuration
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================
# Configure only the authentication methods you want to use.
# All providers are optional - uncomment only what you need.

# Development Authentication (only works when NODE_ENV=development)
DEV_USERNAME="admin"
DEV_PASSWORD="admin"

# ----------------------------------------
# OAuth Providers (optional)
# ----------------------------------------
# Choose any combination of OAuth providers below

# Google OAuth
# Get credentials from: https://console.cloud.google.com/
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
# Get credentials from: https://github.com/settings/developers
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"

# Microsoft OAuth (Azure AD)
# Get credentials from: https://portal.azure.com/
# MICROSOFT_CLIENT_ID="your-microsoft-client-id"
# MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
# MICROSOFT_TENANT_ID="your-tenant-id"

# ----------------------------------------
# Email Authentication (optional)
# ----------------------------------------
# Magic link authentication via Resend
# Get API key from: https://resend.com/
# RESEND_API_KEY="re_your_api_key"
# EMAIL_FROM="noreply@your-domain.com"

# ----------------------------------------
# Notes
# ----------------------------------------
# - In development: admin/admin always works regardless of other providers
# - In production: at least one provider must be configured
# - Users will only see configured authentication methods
# - OAuth redirect URLs should be: http://localhost:3000/api/auth/callback/[provider]

# Optional: Development
NODE_ENV="development"